<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading"></h1>
                    <p class="intro-text">    
                      <% if(error){ %>
                        <%= error %>
                      <% } %>  
                      <form action="/users" method="POST" class="form-inline">
                          <div class="form-group">
                              <input name="password" type="password" id="password" class="form-control input-lg" placeholder="password"/>
                              <input type="submit" value="View Users" class="btn btn-default btn-lg ml10">
                          </div>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>